doctype html 
html 
    head
        link(rel='icon' href='/static/titlelogokid.png' type='image/icon type')
        title Template Finder #{title}
        block scripts 
        block style
    body
        div.all
            nav#navbar
                div.navmain
                    div.navfirst
                        ul
                            div#logo
                                img(src="/static/logo5.png")
                            li #[a(href = '/') Home]
                            li #[a(href = '/about') About]
                            li #[a(href = '/explore') Explore]
                            li #[a(href = '/contribute') Contribute]
                    div.navsecond
                        if !isAuth
                            ul.register
                                li #[a(href = '/register') Register]
                                li #[a(href = '/login') Login]
                        if isAuth
                            div.registerdiv
                                ul.register
                                    li 
                                        a(href = '/') #{handle}
                                    li  
                                        a(href = '/logout') Log&nbsp;Out
        block content
    footer#footer 
        div#fourth   
        |   Template Finder (c) Copyright 2021-2023 | All rights reserved
        div#fifth
        |    Server time : #{moment().format()}                     
